    </parent>

    <artifactId>easy-batch-archetype</artifactId>
    <name>easy-batch-archetype</name>
    <description>Easy Batch maven quick start archetype</description>
    <url>https://github.com/j-easy/easy-batch</url>

    <developers>
        <developer>
            <id>benas</id>
            <name>Mahmoud Ben Hassine</name>
